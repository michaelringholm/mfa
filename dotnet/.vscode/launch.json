{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "MFA Web App",
            "type": "coreclr",
            "request": "launch",            
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/mfa-web-app/bin/Debug/netcoreapp3.1/mfa-web-app.exe",
            "args": [],
            "cwd": "${workspaceFolder}/mfa-web-app",
            "stopAtEntry": false,
            "launchBrowser": {
                "enabled": true
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}